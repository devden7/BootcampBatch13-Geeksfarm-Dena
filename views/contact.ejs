<%- contentFor('body') %>
<section>
  <h1>List contacts</h1>

  <div>
    <% if (cont.length < 1) { %>
    <p>Contact data is empty</p>
    <% } else { %>
    <table class="contact-table">
      <thead>
        <tr>
          <th>Nama</th>
          <th>Email</th>
        </tr>
      </thead>
      <tbody>
        <% cont.forEach((value, i) => { %>
        <tr>
          <td><%= value.name %></td>
          <td><%= value.email %></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    <% }%>
  </div>
</section>
