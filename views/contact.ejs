<%- contentFor('body') %>
<section>
  <h1>List contacts</h1>

  <div>
    <% if (cont.length < 1) { %>
    <p>Contact data is empty</p>
    <% } else { %>
    <table class="contact-table">
      <thead>
        <tr>
          <th>No</th>
          <th>Nama</th>
          <th>Email</th>
          <th>action</th>
        </tr>
      </thead>
      <tbody>
        <% cont.forEach((value, i) => { %>
        <tr>
          <td><%= i+1 %></td>
          <td><%= value.name %></td>
          <td><%= value.email %></td>
          <td>
            <a
              href="contactDetail/<%= value.name %>"
              target="_blank"
              class="btn"
              >Detail</a
            >
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    <% }%>
  </div>
</section>
